<div class="modal fade" id="registration-form">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Sign Up</h4>
        </div>
        <div class="modal-body">
          <%= devise_error_messages! %>

          <% Contour.sign_up_fields.each do |field_hash| %>
            <div class="form-group">
              <%= f.label field_hash[:attribute], class: 'col-lg-2 control-label' %>
              <div class="col-lg-10">
                <%= f.send(field_hash[:type], field_hash[:attribute], class: 'form-control') %>
              </div>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label :first_name, class: 'col-lg-2 control-label' %>
            <div class="col-lg-10">
              <%= f.text_field :first_name, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :last_name, class: 'col-lg-2 control-label' %>
            <div class="col-lg-10">
              <%= f.text_field :last_name, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, class: 'col-lg-2 control-label' %>
            <div class="col-lg-10">
              <%= f.email_field :email, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email_confirmation, class: 'col-lg-2 control-label' %>
            <div class="col-lg-10">
              <%= f.email_field :email_confirmation, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'col-lg-2 control-label' %>
            <div class="col-lg-10">
              <%= f.password_field :password, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: 'col-lg-2 control-label' %>
            <div class="col-lg-10">
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
          </div>

          <% Contour.spam_fields.each do |name| %>
            <div class="form-group control-special">
              <%= label_tag "#{resource_name}[#{name}]", name, class: 'col-lg-2 control-label' %>
              <div class="col-lg-10">
                <%= text_field_tag "#{resource_name}[#{name}]", '', class: 'form-control' %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <div class="form-group">
            <div class="col-lg-10 col-offset-2">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <%= f.submit "Sign up", class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->





</div>